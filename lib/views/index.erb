<html>
  <head>
    <title>The Gossip Project</title>
    <link rel="stylesheet" type="text/css" title="Cool stylesheet" href="/style.css">
  </head>
  <header>
    <nav>
      <div class="nav-link">
        <h1>GOSSIP PROJECT</h1>
      </div>
      <div class="nav-link">
        <h3><a href="/gossips/new/">Ajouter</a></h3>
      </div>
    </nav>
  </header>
  <body>
    <div class="cards">
      <% gossips.each do |gossip| %>
        <div class="card">
          <h2><%=  gossip.author %></h2>
          <p><%=  gossip.content %></p>
          <p class="right"><a href="/gossips/<%= gossip.id %>">voir</a></p>
        </div>
      <% end %>
    </div>
  </body>
</html>
<style media="screen">
  .nav{
    display: flex;
    flex-direction: row;
  }

  .nav-link{
    max-width: 350px;
  }

  .cards{
    display: flex;
    flex-direction: row;
  }
    .card{
    width: 20%;
    max-width: 350px;
    margin: 20px;
    padding: 15px;
    background-color: tomato;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    border-radius: 15px;
    }

  .right{
    text-align: right;
  }
</style>
